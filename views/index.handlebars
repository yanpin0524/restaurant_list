<!-- search bar -->
<div class="container search-bar">
  <div class="search-bar-outer">
    <div class="search-bar-inner">
      <form action="/search">
        <h4 class="mb-2">尋找餐廳：</h4>
        <div class="input-group">
          <input value="{{keyword}}" type="text" name="keyword" class="form-control" placeholder="輸入餐廳、分類"
            aria-label="Restaurant Name..." value="" aria-describedby="search-button">
          <div class="input-group-append">
            <button class="btn btn-major" type="submit" id="search-button"><i class="fas fa-search"></i></button>
          </div>
        </div>
      </form>
    </div>
  </div>
</div>

<!-- restaurant list -->
<div class="container mt-5">
  <div class="row justify-content-center">
    {{#each restaurants}}
    <div class="mb-5 mx-3 card p-0 col-3">
      <a href="/restaurant/{{ this._id }}" class="text-secondary text-decoration-none">
        <img class="card-img-top" src="{{ this.image }}" alt="{{this.name}}">
        <div class="card-body p-3">
          <h6 class="card-title mb-1">{{ this.name }}</h6>

          <div class="restaurant-category mb-1">
            <i class="fas fa-utensils pr-2"></i>
            {{ this.category }}
          </div>

          <span class="badge bg-danger font-weight-normal">
            {{ this.rating }}
            <i class="fas fa-star fa-xs"></i>
          </span>
        </div>
      </a>
      <div class="d-flex justify-content-end align-items-center pt-1 mb-2 border-top">
        <a class="btn btn-outline-secondary btn-sm me-2" href="/restaurant/{{ this._id }}">詳細</a>
        <a class="btn btn-outline-secondary btn-sm me-2" href="/restaurant/{{ this._id }}/edit">編輯</a>
        <form class="me-3" action="/restaurant/{{ this._id }}/delete" method="post">
          <button class="btn btn-outline-danger btn-sm" type="submit">刪除</button>
        </form>
      </div>
    </div>
    {{/each}}
  </div>
</div>